<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Sortir{% endblock %}</title>

        {# notre google font #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=SUSE:wght@100..800&display=swap" rel="stylesheet">


        {# le favicon #}
        <link rel="icon" href="{{ asset('img/icon_sortir.png') }}">
        
        {% block stylesheets %}
         {# notre css #}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">


        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {# entête du site #}
        <header>
            <div class="header-logo">
                <a href="{{ path('app_main') }}" title="Retour Accueil">
                    <img src="{{ asset('img/icon_sortir.png') }}" alt="Sortir Logo">
                </a>
            </div>
            <h1>Sortir</h1> 
            <nav class="header-nav">
                <a href="{{ path('app_main') }}" title="Accueil">Accueil</a>
                {% if app.user %}
                <a href="{{ path('app_logout') }}" title="Logout">Se déconnecter</a>
                <a href="{{ path('app_profile') }}" title="Profile">Mon profil</a>
                <a href="{{ path('app_sortie_new') }}" title="new-sortie">Créer une sortie</a>
                {% endif %}
                {% if not app.user %}    
                    <a href="{{ path('app_login') }}" title="Login">connexion</a>   
                {% endif %}
            </nav>
        </header>

        <main>
            {# contenu principal de chaque page #}
            {% block body %}{% endblock %}
            {# pied-de-page du site #}
        </main>
        <footer>
            <div>
                © Sortir {{ "now"|date("Y") }}
            </div>
        </footer>
    </body>
</html>
