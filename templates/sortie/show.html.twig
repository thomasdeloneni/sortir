{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href={{ asset('styles/sorties/affichage.css') }}>
{% endblock %}

{% block title %}{{ sortie.nom }}{% endblock %}

{% block body %}
    <h1>{{ sortie.nom }}</h1>
    <div class="wrapper">
        <table class="left-wrapper">
            <tbody>
            <tr>
                <th>Rendez-vous le 📅:</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Inscris-toi avant le :</th>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d-m-Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre de places 📢:</th>
                <td>{{ sortie.nbInscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Durée :</th>
                <td>{{ sortie.duree }} minutes</td>
            </tr>
            <tr>
                <th>Description et infos : 💬</th>
                <td class="description">{{ sortie.infosSortie }}</td>
            </tr>
            </tbody>
        </table>
        <table class="right-wrapper">
            <tbody>
            <tr>
                <th>Campus :</th>
                <td>{{ sortie.campus.nom }}</td>
            </tr>
            <tr>
                <th>Lieu : 📍</th>
                <td>{{ sortie.lieu.nom }}</td>
            </tr>
            <tr>
                <th>Ville :</th>
                <td>{{ ville.nom }}</td>
            </tr>
            <tr>
                <th>Code Postal :</th>
                <td>{{ ville.codePostal }}</td>
            </tr>
            <tr>
                <th>Rue :</th>
                <td>{{ sortie.lieu.rue }}</td>
            </tr>
            <tr>
                <th>Latitude :</th>
                <td>{{ sortie.lieu.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude :</th>
                <td>{{ sortie.lieu.longitude }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class=participant>
        <h2>Liste des participants : 😍</h2><br>
        <hr>
        <br>
        {% for participant in participants %}
            <p>{{ participant.nom }}  {{ participant.prenom }}</p>
        {% endfor %}

        {% if sortie.organisateur is not null %}
            <h3>Une question ? Besoin de + d'infos ? Tu peux contacter ce super organisateur : {{ organisateur.nom }} 🤠</h3>
        {% else %}
            <h3>Une question ? Besoin de + d'infos ? Tu peux contacter ce super organisateur : Aucun organisateur 🤠</h3>
        {% endif %}

    </div>
    <a href="{{ path('app_main') }}" class="list">Retourner sur la liste des sorties</a>

{% endblock %}
