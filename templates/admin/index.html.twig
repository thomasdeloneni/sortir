{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper admin_dashboard">
        <h1>Dashboard</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="container_dashboard">
                <a href="{{ path('admin_user_new') }}" title="creation utilisateur">Creer un nouvel utilisateur</a>
                <a href="{{ path('admin_user_view') }}" title="liste utilisateur">Liste des utilisateurs</a>
            </div>
        {% endif %}
    </div>
{% endblock %}